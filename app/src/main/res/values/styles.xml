<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerRound" parent="">
        <item name="cornerSize">@dimen/corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CustomTextStyleHeadline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/extra_large_sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextStyleHeadline.Rounded">
        <item name="fontFamily">@font/sf_rounded</item>
    </style>

    <style name="CustomTextStyleHeadline.Bold">
        <item name="fontFamily">@font/sf_bold</item>
    </style>

    <style name="CustomTextStyleBody">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_sp</item>
    </style>

    <style name="CustomTextStyleBody.Bold">
        <item name="android:fontFamily">@font/sf_bold</item>
    </style>


    <style name="CustomTextStyleBody.SemiBold">
        <item name="android:fontFamily">@font/sf_semi_bold</item>
    </style>

    <style name="CustomTextStyleBody.Medium">
        <item name="android:fontFamily">@font/sf_medium</item>
    </style>

    <style name="CustomTextStyleBody.Reg">
        <item name="android:fontFamily">@font/sf_reguler</item>
    </style>

    <style name="CustomTextStyleBody.Rounded">
        <item name="android:fontFamily">@font/sf_rounded</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/sf_medium</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="android:background">@drawable/custom_edt_text_rounded</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/dark_blue_100</item>
        <item name="cornerRadius">@dimen/large_margin</item>
        <item name="android:elevation">@dimen/small_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_sp</item>
        <item name="fontFamily">@font/sf_semi_bold</item>
    </style>

    <style name="CustomButtonStyle.Outlined">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/dark_blue_100</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/dark_blue_100</item>
    </style>
</resources>